<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TestMarket" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="android:statusBarColor">@color/status_bar_bg_color</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.TestMarket" parent="Base.Theme.TestMarket" />

    <style name="Theme.App.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/main_color</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.TestMarket</item>
    </style>
</resources>